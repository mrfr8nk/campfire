---
import "../styles/global.css";
import IndonesiaCityPicker from "../components/pages/IndonesiaCityPicker";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Campfire Indonesia</title>

    <!-- OpenGraph meta tags -->
    <meta property="og:title" content="Campfire Indonesia" />
    <meta
      property="og:description"
      content="Pick your city to find your Campfire event in Indonesia."
    />
    <meta property="og:image" content="/og-banner.png" />
    <meta property="og:url" content="https://campfire.hackclub.com/indonesia" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Hack Club Campfire" />

    <!-- Twitter Card meta tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@hackclub" />
    <meta name="twitter:title" content="Campfire Indonesia" />
    <meta
      name="twitter:description"
      content="Pick your city to find your Campfire event in Indonesia."
    />
    <meta name="twitter:image" content="/og-banner.png" />
  </head>
  <body>
    <IndonesiaCityPicker />
  </body>
</html>
